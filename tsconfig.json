
{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@/*": ["./*"],
    }
  },
  "include": ["src"],
}